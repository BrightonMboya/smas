// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    // previewFeatures = ["multischema"]
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_DATABASE_URL")
    // schemas   = ["public", "auth"]
}

model Organizations {
    name         String
    id           String      @id @default(cuid())
    emailAddress String      @unique
    expenses     Expenses[]
    products     Products[]
    sales        Sales[]
    invoices     Invoices[]
    suppliers    Suppliers[]
    debts        Debts[]

    // @@schema("auth")
}

model Expenses {
    id              String        @id @default(cuid())
    name            String
    date            DateTime
    amount          Int
    description     String?
    Organizations   Organizations @relation(fields: [organization_id], references: [id])
    organization_id String

    // @@schema("auth")
}

model Products {
    id              String        @id @default(cuid())
    createdAt       DateTime      @default(now())
    name            String
    buyingPrice     String
    sellingPrice    String
    stockAvailable  Int
    description     String?
    sales           Sales[]
    Organizations   Organizations @relation(fields: [organization_id], references: [id])
    organization_id String

    // @@schema("auth")
}

model Sales {
    id              String        @id @default(cuid())
    customerName    String
    amount          Int
    quantity        Int
    status          String
    Products        Products      @relation(fields: [productsId], references: [id])
    productsId      String
    date            DateTime
    Organizations   Organizations @relation(fields: [organization_id], references: [id])
    organization_id String

    // @@schema("auth")
}

model Invoices {
    id              String         @id @default(cuid())
    invoiceName     String
    invoiceDate     DateTime
    invoiceDueDate  DateTime
    companyAdress   String
    clientAdress    String
    clientName      String
    companyName     String
    invoiceItems    InvoiceItems[]
    Organizations   Organizations  @relation(fields: [organization_id], references: [id])
    organization_id String

    // @@schema("public")
}

model InvoiceItems {
    id         String   @id @default(cuid())
    itemName   String
    quantity   Int
    amount     Int
    rate       Int
    Invoices   Invoices @relation(fields: [invoicesId], references: [id])
    invoicesId String

    // @@schema("auth")
}

model Suppliers {
    id              String        @id @default(cuid())
    fullName        String
    phoneNumber     String
    product         String
    company         String
    notes           String?
    Organizations   Organizations @relation(fields: [organization_id], references: [id])
    organization_id String

    // @@schema("auth")
}

model Debts {
    id               String        @id @default(cuid())
    debtorName       String
    amount           Int
    date             DateTime
    paid             Boolean       @default(false)
    Organizations    Organizations @relation(fields: [organizations_id], references: [id])
    organizations_id String

    // @@schema("auth")
}
